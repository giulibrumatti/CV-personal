---
import { projects } from "@cv";
import Section from "../Section.astro";
---

<div class="print">
    <Section title="Proyectos">
        <ul>
            {
                projects.map(
                    ({ url, description, highlights, name, isActive }) => {
                        return (
                            <li>
                                <article>
                                    <header>
                                        <div>
                                            <h3>
                                                <a
                                                    target="_blank"
                                                    href={url}
                                                    title={`Ver el proyecto ${name}`}
                                                >
                                                    {name}
                                                </a>
                                                {isActive && (
                                                    <span>&bull;</span>
                                                )}
                                            </h3>
                                            <h4>
                                                <p>{description}</p>
                                            </h4>
                                        </div>
                                    </header>
                                    <footer>
                                        {highlights.map((highlights) => {
                                            return <span>{highlights}</span>;
                                        })}
                                    </footer>
                                </article>
                            </li>
                        );
                    },
                )
            }
        </ul>
    </Section>
</div>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    @media print {
        ul {
            gap: 10px;
        }
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 6px;
        background: #eee;
        color: #444;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>
