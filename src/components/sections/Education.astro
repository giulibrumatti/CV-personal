---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section class="print-edu" title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, state, area, url }) => {
        const years = `${startDate} - ${state}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <a
                  class="underline hover:decoration-2"
                  target="_blank"
                  href={url}
                >
                  <p>{area}</p>
                </a>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

  @media print {
    ul {
      gap: 20px;
    }
    footer a {
      text-decoration: none;
    }
  }
</style>
